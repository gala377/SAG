<configuration>
    <!-- This is a development logging configuration that logs to standard out, for an example of a production
        logging config, see the Akka docs: https://doc.akka.io/docs/akka/2.6/typed/logging.html#logback -->
    <appender name="STDOUT" target="System.out" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date{ISO8601}] [%level] [%logger] [%thread] [%X{akkaSource}] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <neverBlock>true</neverBlock>
        <appender-ref ref="STDOUT" />
    </appender>

    <root level="INFO">
        <appender-ref ref="ASYNC"/>
    </root>

    <appender name="AKKA" class="ch.qos.logback.core.FileAppender">
        <filter class="filters.AkkaFilter"/>
        <file>log/akka.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%date{ISO8601}] [%level] [%logger] [%thread] [%X{akkaSource}] - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="AKKA" />
    </root>

    <appender name="SAG" class="ch.qos.logback.core.FileAppender">
        <filter class="filters.SagFilter"/>
        <file>log/sag.log</file>
            <append>true</append>
            <encoder>
                <pattern>[%date{ISO8601}] [%level] [%logger] [%thread] [%X{akkaSource}] - %msg%n</pattern>
            </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="SAG" />
    </root>

</configuration>
